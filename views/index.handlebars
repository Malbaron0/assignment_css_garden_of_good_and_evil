<div>
    <form action="/" method="POST">

        <label for="good" >Good</label>
        <input type="radio" name="position" id="good" value="good" >

        <label for="evil">Evil</label>
        <input type="radio" name="position" id="evil" value="evil">
        
        <label for="colorPicker">Favorite Color</label>
        <select name="colorPicker" id="colorPicker">
            <option value="blue">Blue</option>
            <option value="yellow">yellow</option>
            <option value="red">red</option>
            <option value="brown">brown</option>
        </select>

        <label for="food">Favorite Food</label>
        <input type="text" name="food" id="food">

        <label for="insanity">Insanity</label>
        <input type="range" id="insanity" name="insanity" min="0" max="100">

        {{!--<label for="color">Favorite Color</label>
        <input type="dropdown" name="color" id="color">--}}


        <input type="submit" name="submit" value="Submit">

    </form>

    <div><h1>{{intent}}</h1></div>

    <div>
        <h2>Dislikes And Likes</h2>
        <div><h3>Likes</h3>
        <ul>
            {{#each description.likes as |like|}}
               <li>{{like}}</li>
            {{/each}}
        </ul>
        <div><h3>Dislikes</h3>
        <ul>
            {{#each description.dislikes as |dislike|}}
               <li>{{dislike}}</li>
            {{/each}}
        </ul>
    </div>

    <div>
        <h2>Biography</h2> 
        <p>{{description.biography}}
    </div>

    <div>
        <h2>Resume</h2>
        {{#each description.resume as |positions|}}
                <h3>position: {{@key}}  </h3>
                {{#each positions}}
                    <p>{{this}}</p>
                {{/each}}
        {{/each}}
    </div>
</div>